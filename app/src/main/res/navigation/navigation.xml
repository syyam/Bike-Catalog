<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/bikesFragment">
    <fragment
        android:id="@+id/bikesFragment"
        android:name="com.example.bikecatalog.ui.BikesFragment"
        android:label="BikesFragment"
        tools:layout="@layout/fragment_bikes"
        >
        <action
            android:id="@+id/action_bikesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.bikecatalog.ui.DetailsFragment"
        android:label="DetailsFragment"
        tools:layout="@layout/fragment_details"
        >
        <argument
            android:name="bikes"
            app:argType="com.example.bikecatalog.model.Bikes" />
    </fragment>
</navigation>